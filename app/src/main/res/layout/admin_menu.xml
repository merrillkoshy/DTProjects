<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/adminmenu"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/progressbg"
        android:layout_width="match_parent"
         android:layout_height="match_parent">
    <ImageView
            android:layout_marginTop="80dp"
            android:layout_marginStart="50dp"
            android:id="@+id/teamassignmentIcon"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
               android:layout_height="50dp"/>
    <TextView
            android:layout_alignStart="@+id/teamassignmentIcon"
            android:layout_alignTop="@+id/teamassignmentIcon"
            android:layout_marginTop="80dp"
            android:id="@+id/teamassignmentText"
            android:text="sample"
            android:layout_alignEnd="@id/teamassignmentIcon"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#FFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/swipinfo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/right_chevron"
            android:layout_marginBottom="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="70dp"
            android:layout_alignEnd="@+id/swipinfo"
            android:textAlignment="textEnd"
            android:text="Swipe right to Clipboard"
            android:layout_marginBottom="45dp"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>