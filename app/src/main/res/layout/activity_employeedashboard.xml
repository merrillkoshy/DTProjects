<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
        android:background="@drawable/background"
         android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/clientlogo"
                    android:layout_marginStart="30dp"
                    android:layout_width="200dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_height="200dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/clientname"
                    android:layout_marginStart="10dp"
                    android:text="sample"
                    android:textColor="#FFF"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/deadline"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#FFF"
                        android:text="sample"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


        <TextView
                android:id="@+id/latestactivityhead"
                android:text="sample"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/op"
                    android:text="Overall Progress"
                    android:layout_marginStart="30dp"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/opPercentage"
                    android:layout_marginStart="10dp"

                    android:text="Percentile"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/progressbg"
                android:layout_gravity=""
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"/>

        <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/reportas"
                    android:text="Report As:"
                    android:layout_marginStart="30dp"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/reportasname"
                    android:layout_marginStart="30dp"
                    android:text="sample"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
                android:id="@+id/reportcomment"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:text="REPORT A COMMENT"
                android:drawableLeft="@drawable/ic_menu_send"
                android:layout_height="?actionBarSize"/>

        <Button
                android:id="@+id/sendpic"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:drawableStart="@drawable/ic_menu_camera"
                android:text="POST A PICTURE"
                android:layout_height="?actionBarSize"/>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/mImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            <TextView
                    android:id="@+id/timestamp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
                <ImageView
                        android:id="@+id/fulls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</RelativeLayout>