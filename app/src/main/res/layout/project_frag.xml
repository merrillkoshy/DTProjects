<LinearLayout
        android:id="@+id/frame"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Client Name"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/clientname_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Client Name"

                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Start Date"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/startdate_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Start Date"

                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Project Deadline"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/deadline_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Project Deadline"

                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Overall Progress"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/op_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Overall Progress"

                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Latest Activity"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/la_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Latest Activity"

                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Task Deadline"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/td_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Task Deadline"

                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Task Status"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/ts_et"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:hint="Task Status"

                android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>